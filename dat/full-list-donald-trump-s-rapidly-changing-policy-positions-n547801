qz?mbr=true","width":"854","height":"480","bitRate":"1503629","privateUrl":null,"duration":"238.267","durationISO":"PT3M58.267S"},{"format":"ISM","assetType":"Smooth_1","publicUrl":"http://link.theplatform.com/s/2E2eJC/G9xtnyb06qCt","width":"1464","height":"824","bitRate":"3763968","privateUrl":null,"duration":"237.766","durationISO":"PT3M57.766S"}],"video_playlists":[{"playlist_id":"nnd_18424744","label":null}],"nativeVideo":false,"autoPlay":false,"hideAssociatedPlaylist":false,"defaultAssociation":null,"duration":238,"liveVideoEvent":null,"liveVideoStatus":null,"hasCaption":false,"durationISO":"PT3M58.267S","captionLinks":{"requiresCaptioning":"False","clean":null,"smpte-tt":null,"srt":"http://media.snappytv.com/captions/928000/259p259/2015-07-12T13-17-33.533Z--238.234.mp4.srt","web-vtt":null}},
