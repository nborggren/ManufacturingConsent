    <!-- Required Scripts-->
    <script src="http://www.bloomberg.com/graphics/assets/js/vendor/lodash.underscore.min.js"></script>
    <script src='http://www.bloomberg.com/graphics/assets/js/lib/broadcast-resize.js'></script>
    <script src="http://www.bloomberg.com/graphics/assets/js/vendor/jquery.min.js"></script>
    <script type="text/javascript">

      var oldWidth = window.innerWidth;
      window.onresize = _.debounce(function(){
      if (oldWidth === window.innerWidth){ return; }
      oldWidth = window.innerWidth;
      //Call your resize JS here

      //sends postMessages with height of page
      broadcastResize()
      }, 50);

      (function(){
      window.onresize()
 
      // Quiz Code
      var dSet = false;
      function dlog (val) {
        if (dSet) {
          console.log(val);
        }
      };

      var rightAnswers = [1,0,0,1,0,1,0];
      var userAnswers = [];
      $('.quiz-answers li').on('click', function () {
        var parentID = $(this).closest('section').attr('id');
        dlog(parentID);
        var allChildren = '#' + parentID + ' li';
        $(allChildren).removeClass('selected-answer');
        $(this).addClass('selected-answer');
        var selectedAnswer = $(this).attr('data-answer-value');
        dlog(parentID + ' : ' + selectedAnswer);
        userAnswers[parentID.slice(1)-1] = selectedAnswer;
        dlog(userAnswers);
        var userScore = getResults()
        $('.num-right').html(userScore);
        $('.snark').html(getResultStrings(userScore));
        $('#tweetLink').attr('href',getTweet(userScore));
      });

      $('.get-results').on('click', function () {
        $('.num-right').html(getResults());
      })

      function getResults () {
        var correct = 0;
        for (var i=0;i<userAnswers.length;i++) {
          if (userAnswers[i]==rightAnswers[i]) {
            correct++;
            setAnswerPage(i,'correct');
          } else setAnswerPage(i,'incorrect');
        }
        // dlog(correct);
        var percentRight = parseInt((correct / rightAnswers.length) * 100);
        // dlog(percentRight);
        return percentRight;
      }

      function setAnswerPage (index, newClass) {
        var listItem = '.answer-column li:nth-child(' + (index+1) + ')',
            alphaAnswers = ['A','B','C','D'],
            answerStr = 'You selected ' + alphaAnswers[userAnswers[index]];
        if (!userAnswers[index]) {
            answerStr = 'You skipped this';
        }
        if (newClass == 'correct') {
            answerStr = "";
        }
        // dlog('listItem : ' + listItem);
        // dlog('newClass : ' + newClass);
        $(listItem).removeClass('correct').removeClass('incorrect').addClass(newClass);
        $(listItem + ' .user-answer').html(answerStr);
      }

      $('.navbuttons li').on('click', function () {
          var direction = $(this).attr('data-direction');
          var parentID = $(this).closest('section').attr('id');
          var newQuestionID;
          // dlog(parseInt(parentID.slice(1))+1);
          switch (direction) {
            case 'next' : {
              newQuestionID = 'Q' + (parseInt(parentID.slice(1))+1);
              break;
            }
            case 'prev' : {
              newQuestionID = 'Q' + (parseInt(parentID.slice(1))-1);
              break;
            }
            case 'reset' : {
              newQuestionID = 'Q1';
              $('li').removeClass('selected-answer');
              break;
            }
            case 'none' : {
              newQuestionID = parentID;
              break;
            }
            default : newQuestionID = direction;
          }
          dlog(newQuestionID);
          $('#' + parentID).hide();
          $('#' + newQuestionID).show();
          broadcastResize();
      });

      var tweetTxt;

      function getResultStrings (userScore) {
        dlog('userScore : ' + userScore);
        // var percentRight = parseInt((userScore / rightAnswers.length) * 100);
        var byTens = Math.floor(userScore / 10);
        // dlog(percentRight);
        dlog('byTens : ' + byTens);
        switch (byTens) {
          case 0 :
          case 1 :
          case 2 :
          case 3 : 
                tweetTxt = "Oops. I can barely tell the difference between @realDonaldTrump and @JebBush";
                return "You’re fired!"
          case 4 :
          case 5 :      
          case 6 :
          case 7 : 
          case 8 :
          case 9 :
                tweetTxt = "So turns out it's pretty hard to guess who said it: @realDonaldTrump or @JebBush";
                return "You’re a low-energy quiz taker."
          case 10 : 
                tweetTxt = "I don't want to brag but I can tell @realDonaldTrump from @JebBush";
                return "The best, most intelligent, classiest score!"
          default : break;
        }
      }


      function getTweet (percentScore) {
        var urlArticle = "http://www.bloomberg.com/politics/articles/2015-09-02/can-you-tell-the-difference-between-90s-jeb-bush-and-donald-trump-";
        var txtTweet = (tweetTxt) ? tweetTxt : "My score was " + percentScore + " on the Trump or Bush quiz.  Can you do better?";
        var urlTweet = "https://twitter.com/intent/tweet?text=" + encodeURI(txtTweet) + "&url=" + encodeURI(urlArticle);
        return urlTweet;
      }

    })()
    </script>
